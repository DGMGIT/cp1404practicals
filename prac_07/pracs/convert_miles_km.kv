BoxLayout
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_m
            font_size: 48
            on_text: app.handle_calculate(self.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: "up"
                on_press: app.handle_increment(input_m.text, 1)
            Button:
                text: "down"
                on_press: app.handle_increment(input_m.text, -1)
#    Button:
#        text: "Convert m to km"
#        on_press: app.handle_calculate(input_m.text)
    Label:
        id: output_km
        text: app.output
        font_size: 48
        color: (1, 1, 0, 1)
